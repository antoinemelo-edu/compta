$ pip install --upgrade pip
$ pip install pyinstaller

# WINDOWS ######################

$ python.exe -m pip install --upgrade pip

$ pyinstaller --onefile --noconsole --windowed Compta.py
$ pyinstaller --onefile --noconsole --windowed Clientdist.py
$ pyinstaller --onefile --noconsole --windowed Serveurdist.py

# MacOS ######################

$ https://github.com/thonny/thonny/releases/download/v4.1.4/thonny-4.1.4.pkg

$ pyinstaller --onefile --noconsole --windowed Compta.py

$ find / -name "libtcl*.dylib" 2>/dev/null
$ find / -name "init.tcl" 2>/dev/null

$ pyinstaller --onefile --add-binary '/Applications/Thonny.app/Contents/Frameworks/Python.framework/Versions/3.10/lib/libtcl8.6.dylib:.' --add-binary '/Applications/Thonny.app/Contents/Frameworks/Python.framework/Versions/3.10/lib/libtk8.6.dylib:.' Compta.py

pyinstaller --onefile --noconsole --windowed --add-data '/Applications/Thonny.app/Contents/Frameworks/Python.framework/Versions/3.10/lib/tcl8.6:./tcl8.6' --add-binary '/Applications/Thonny.app/Contents/Frameworks/Python.framework/Versions/3.10/lib/libtcl8.6.dylib:.' --add-binary '/Applications/Thonny.app/Contents/Frameworks/Python.framework/Versions/3.10/lib/libtk8.6.dylib:.' Compta.py

